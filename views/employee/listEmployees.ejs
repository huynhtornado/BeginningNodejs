<h4>
    <a class="btn btn-secondary" style="color: white;"
        href="/employee">
        <i class="fas fa-plus" style="color: white;"></i> Create Employee
    </a>
    {{viewTitle}}
</h4>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Full name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">City</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        {{#each listEmployees}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.city}}</td>
            <td>
                <a href="/employee/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this employee?');">
                    <li class="fa fa-trash"></li>
                </a>
                <a href="/employee/{{this._id}}">
                    <li class="fa fa-edit"></li>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>